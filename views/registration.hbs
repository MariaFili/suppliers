<h1>Registrarion</h1>

{{#if errors}}
    <span>Something went wrong:</span>
    <ul class="error-list pad-b-2">
        {{#each errors as |error|}}
            <li class="error-item">{{error}}</li>
        {{/each}}
    </ul>
{{/if}}


<form method="post" action="/registration/redir">
  <label for="title-input" class="block mar-b-1">Login</label>
  <input id="one" name="name" type="text" value="{{Login}}" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

  <label for="body-textarea" class="block mar-b-1">Password</label>
  <input id="two" name="password" type="text" value="{{pswrd}}" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

  <label for="body-textarea" class="block mar-b-1">Phone</label>
  <input id="two" name="password" type="text" value="{{phn}}" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

  <label for="body-textarea" class="block mar-b-1">Email</label>
  <input id="two" name="password" type="text" value="{{mail}}" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

  <label for="body-textarea" class="block mar-b-1">Company name</label>
  <input id="two" name="password" type="text" value="{{name}}" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

  <label for="body-textarea" class="block mar-b-1">INN</label>
  <input id="two" name="password" type="text" value="{{inn}}" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

  <input type="submit" value="Register" tabindex="3" class="block button w-100 mar-t-4 mar-b-3 pad-2 round-1 text-c center no-border no-outline">
</form>
